TB_ROOT?=	/usr/local/tinderbox
BUILDS_DIR=	${TB_ROOT}/builds
PORTSTREE_DIR=	${TB_ROOT}/portstrees
JAILS_DIR=	${TB_ROOT}/jails
SCRIPTS_DIR?=	${TB_ROOT}/scripts
HOOKS_DIR?=	${SCRIPTS_DIR}/hooks
TC_CMD?=	${SCRIPTS_DIR}/tc

BIN_MODE?=	555
SHARE_MODE?=	444
DIR_MODE?=	755
INSTALL_CMD?=	install
INSTALL_FLAGS?=	-o root -g wheel
INSTALL_BIN?=	${INSTALL_CMD} ${INSTALL_FLAGS} -m ${BIN_MODE}
